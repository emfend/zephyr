/ {
	chosen {
		zephyr,ipc_shm = &ipc_shm;
		zephyr,rsc_table = &rsc_table;
		zephyr,ipc = &mailbox0;
	};

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		ipc_shm: memory@55000000 {
			reg = <0x55000000 0x500000>;
		};

		rsc_table: rsc-table@550ff000 {
			reg = <0x550ff000 0x1000>;
		};
	};
};
